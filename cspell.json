{
  "$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/cspell.schema.json",
  "version": "0.2",
  "dictionaryDefinitions": [
    {
      "name": "project-words",
      "path": "./cspell.txt",
      "addWords": true
    }
  ],
  "dictionaries": ["project-words"],
  "ignorePaths": [
    "node_modules",
    "/cspell.txt",
    "./pnpm-lock.yaml",
    "./tailwind.config.ts",
    "./prod.docker-compose.yml",
    "./dev.docker-compose.yml",
    "prisma/*",
    ".husky",
    ".next",
    "./nginx.conf"
  ]
}
